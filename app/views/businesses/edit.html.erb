<% provide(:title, "Edit Business") %>
<h1 class="text-center">Edit Business</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3" id="editbusiness-form">
    <%= form_for(@business) do |f| %>
      <% if @business.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@business.errors.count, "invalid value") %>.</h2>

          <ul>
          <% @business.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.submit "Update Business", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
